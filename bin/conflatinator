#!/usr/bin/env python
# -*- coding: utf-8 -*-
import sys
import pathlib

pynini_root_dir = pathlib.Path(sys.argv[0]).resolve().parents[2]
pynini_bin_dir = pynini_root_dir / 'bin'

print('root', pynini_root_dir)
print('bin', pynini_bin_dir)

# from os.path import dirname, join
# pynini_bin_dir = dirname(sys.argv[0])
# pynini_root_dir = dirname(pynini_bin_dir)


def die(msg):
    sys.stderr.write(msg + '\n')
    sys.exit(1)


try:
    import jinja2
except ImportError:
    die("jinja2 is not installed")


try:
    import pynini
except ImportError:
    sys.path.append(pynini_root_dir.root)
    try:
        import pynini
    except ImportError as e:
        die("failed to import pynini, even after adding local src: %s, %s" % (pynini_root_dir, e))


if __name__ == "__main__":
    config = pynini.Setup.determine()
    builder = pynini.Formatter(config)
    builder.run()
